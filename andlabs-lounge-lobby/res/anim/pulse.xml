<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android" >

    <alpha
        android:duration="1200"
        android:fromAlpha="1"
        android:repeatCount="20"
        android:toAlpha="0" />

    <scale
        android:duration="1200"
        android:fromXScale="0"
        android:fromYScale="0"
        android:pivotX="50%"
        android:pivotY="50%"
        android:repeatCount="20"
        android:toXScale="1"
        android:toYScale="1" />

</set>